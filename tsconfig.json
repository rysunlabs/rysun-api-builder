{
  "compileOnSave": false,
  "compilerOptions": {
      "lib": [
          "es2018",
          "esnext"
      ],
      "target": "ES2018",
      "module": "Node16",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./lib/esm",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "Node16",
      "skipLibCheck": true,
      "sourceMap": true  
  },
  "include": [
      "./*.ts"    
  ],
  "exclude": [
      "node_modules"
  ],
  "typeRoots": [
      "../node_modules/@types"
  ]
}
